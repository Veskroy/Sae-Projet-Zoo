{% set result = pagination.totalItemCount / pagination.itemNumberPerPage %}
{% set roundedResult = result|round(0, 'ceil') %}
{% set numberPagesDisplayed = 2 %}

<div class="pagination">

    {% if pagination.totalItemCount > pagination.itemNumberPerPage %}

        <a href="{{ path('app_forum', {'page': 1}) }}"
           class="btn-pagination link-first {{ pagination.currentPageNumber > 1 ? "" : "disabled" }}"
        >
            <<
        </a>

        <div class="pagination-data">
            {% if (pagination.currentPageNumber - numberPagesDisplayed) > 1 %}
                <span class="btn-pagination indicator">...</span>
            {% endif %}

            {% for i in (pagination.currentPageNumber - numberPagesDisplayed)..(pagination.currentPageNumber+numberPagesDisplayed) %}
                {% if i > 0 and i <= roundedResult %}
                    {% if pagination.currentPageNumber == i %}
                        <span class=
                              "btn-pagination pagination-actual-number"
                        >
                            {{ i }}</span>
                    {% else %}
                        <a href="{{ path('app_forum', {'page': i}) }}"
                           class="btn-pagination link-page"
                        >{{ i }}</a>
                    {% endif %}
                {% endif %}
            {% endfor %}

            {% if (pagination.currentPageNumber + numberPagesDisplayed) < roundedResult %}
                <span class="btn-pagination indicator">...</span>
            {% endif %}
        </div>

        <a href="{{ path('app_forum', {'page': roundedResult}) }}"
           class="btn-pagination link-last {{ pagination.currentPageNumber != roundedResult ? "" : "disabled" }}">
            >>
        </a>

    {% else %}

        <p>Il n'y a pas d'autres donn√©es.</p>

    {% endif %}

</div>
